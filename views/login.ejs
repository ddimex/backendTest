<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <img
      class="backgroundImg"
      src="https://static1.squarespace.com/static/5e949a92e17d55230cd1d44f/t/6503135de3c6577fbc27c966/1694700397907/TiGradient3x2.png?format=1500w"
      alt=""
    />

    <div class="bodyContent flexCol">
      <%- include("partials/header") %>

      <div class="formContainer">
        <form class="flexCol">
          <h1 class="cardTitle">LOG IN</h1>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="email"
            required
          />
          <input
            type="password"
            id="password"
            name="password"
            placeholder="password"
            required
          />
          <button class="button" type="submit">
            <div class="btnText">Log in</div>
          </button>

          <a href="/signup">
            <p class="cardText">Dont have an account? Sign up here</p></a
          >
        </form>
      </div>
    </div>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.6/axios.min.js"
      integrity="sha512-06NZg89vaTNvnFgFTqi/dJKFadQ6FIglD6Yg1HHWAUtVFFoXli9BZL4q4EO1UTKpOfCfW5ws2Z6gw49Swsilsg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script type="text/javascript" src="/js/login.js"></script>
  </body>
</html>
