<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Courses</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <img
      class="backgroundImg"
      src="https://static1.squarespace.com/static/5e949a92e17d55230cd1d44f/t/6503135de3c6577fbc27c966/1694700397907/TiGradient3x2.png?format=1500w"
    />

    <div class="bodyContent flexCol">
      <%- include("partials/header") %>

      <div class="container">
        <div class="cardContainer flexRow overflow">
          <% Courses.forEach(course => { %>

          <div class="card flexCol" id="<%= course._id  %>">
            <div class="buttonContainer flexRow spaceBetween">
              <a class="button2" href="/editCourse/<%= course._id %>"> edit </a>
              <button
                class="button2"
                onclick="deleteCourse('<%= course._id %>')"
              >
                <div>delete</div>
              </button>
            </div>

            <h1 class="cardTitle"><%= course.name %></h1>
            <p class="cardText"><%= course.address %></p>
            <p class="cardText"><%= course.area %></p>
            <a class="button" href="/courses/<%= course._id %>">Read more</a>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.6/axios.min.js"
      integrity="sha512-06NZg89vaTNvnFgFTqi/dJKFadQ6FIglD6Yg1HHWAUtVFFoXli9BZL4q4EO1UTKpOfCfW5ws2Z6gw49Swsilsg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script type="text/javascript" src="/js/delete.js"></script>
  </body>
</html>
