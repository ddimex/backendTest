<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Academies</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <img
      class="backgroundImg"
      src="https://static1.squarespace.com/static/5e949a92e17d55230cd1d44f/t/6503135de3c6577fbc27c966/1694700397907/TiGradient3x2.png?format=1500w"
      alt=""
    />

    <div class="bodyContent flexCol">
      <%- include("partials/header") %>

      <div class="container2">
        <div class="cardContainer flexRow">
          <% Academies.forEach(academy => { %>

          <div class="card flexCol" id="<%= academy._id %>">
            <div class="buttonContainer flexRow spaceBetween">
              <a class="button2" href="/editAcademy/<%= academy._id %>">
                edit
              </a>
              <button
                class="button2"
                onclick="deleteAcademy('<%= academy._id %>')"
              >
                <div>delete</div>
              </button>
            </div>

            <h1 class="cardTitle"><%= academy.name %></h1>
            <p class="cardText"><%= academy.address %></p>

            <a class="button" href="/academies/<%= academy._id %>">
              Available courses
            </a>
          </div>

          <% }) %>
        </div>
      </div>
    </div>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.6/axios.min.js"
      integrity="sha512-06NZg89vaTNvnFgFTqi/dJKFadQ6FIglD6Yg1HHWAUtVFFoXli9BZL4q4EO1UTKpOfCfW5ws2Z6gw49Swsilsg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script type="text/javascript" src="/js/delete.js"></script>
  </body>
</html>
